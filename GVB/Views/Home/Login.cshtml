@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="StyleSheet" href="~/Content/StyleSheet.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Golden Valley Beef</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <span class="navbar-title">Golden Valley Beef</span>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="container login-credentials" align="center">
                <div class="row">
                    <div class="login-center">
                        <label for="inputEmail" class="login-text">Username:</label>
                        @Html.TextBox("Username")
                    </div>
                </div>
                <div class="row">
                    <div class="login-center">
                        <label for="inputPassword" class="login-text">Password:</label>
                        @Html.Password("Password")
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="login-center">
                        <button type="submit" class="btn btn-info btn-login">Login</button>
                    </div>
                </div>
            </div>
        }
        <hr />
        <footer>
            <center>
                <div class="imgcontainer">
                    <img alighn="center" width="150" height="90" src="~/Content/Images/cow.jpg" alt="Cow Image">
                </div>
            </center>
            <br />
            <br />
            <div>
                <p>&copy; @DateTime.Now.Year - Golden Valley Beef</p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
