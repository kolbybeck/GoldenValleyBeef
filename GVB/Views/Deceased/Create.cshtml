@model GVB.Models.Deceased

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Deceased</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.CattleNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CattleNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CattleNumber, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.DeceasedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ if (ViewBag.Navigation == null)
                    {
                        @Html.EditorFor(model => model.DeceasedDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DeceasedDate, "", new { @class = "text-danger" })
                    }
                    else
                    {
                        @Html.EditorFor(model => model.DeceasedDate, new { htmlAttributes = new { @Value = DateTime.Now.Date.ToShortDateString(), @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.DeceasedDate, "", new { @class = "text-danger" })
                    }
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DairyID, "Dairy", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DairyID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DairyID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FeedlotID, "Feedlot", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ if (ViewBag.Navigation == null)
                    {
                        @Html.DropDownList("FeedlotID", null, htmlAttributes: new { @class = "form-control" })
                    }
                    else
                    {
                        @Html.DropDownList("FeedlotID", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                    }
                }
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeID, "Employee", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
                    }

<div>
    @Html.ActionLink("Back", "ChooseFeedlot", "User", null, new { @class = "btn btn-info btn-large" })
    @Html.ActionLink("View Deceased List", "Index", "Deceased", null, new { @class = "btn btn-info btn-large" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

